                    <a href="/OurTeam/Index/"><span class="fa fa-support mr-3"></span> Ekip Üyelerimiz</a>
                </li>
                <li>
                    <a href="#"><span class="fa fa-bar-chart-o mr-3"></span> istatistikler</a>
                </li>
                <li>
                    <a href="#"><span class="fa fa-gear mr-3"></span> Ayarlar</a>
                </li>
                <li>
                    <a href="#"><span class="fa fa-sign-out mr-3"></span> Çıkış Yap</a>
                </li>
            </ul>

        </nav>

        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5 pt-5">
            @RenderBody()
        </div>
    </div>

    <script src="~/sidebar-09/js/jquery.min.js"></script>
    <script src="~/sidebar-09/js/popper.js"></script>
    <script src="~/sidebar-09/js/bootstrap.min.js"></script>
    <script src="~/sidebar-09/js/main.js"></script>
</body>
</html>