@model List<OurTeam>
<section class="w3l-team" id="team">
    <div class="team-block py-5">
        <div class="container py-lg-5">
            <div class="title-content text-center">
                <h6 class="sub-title" style="color:deepskyblue">Ekip Üyelerimiz</h6>
                <h3 class="title-big">Lezzetimizin Sırrı Şeflerimizin Ellerinden</h3>
            </div>
            <div class="cards-list">
                @foreach (var item in Model)
                {
                    <div class="card 1">
                        <div class="card_image"> <img src="@item.ImageUrl" /> </div>
                        <span style="margin: 10px;"></span>
                        <p><i> @item.Name @item.Surname</i> </p>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<style>
    .cards-list {
        z-index: 0;
        width: 100%;
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
    }

    .card {
        margin: 30px auto;
        width: 300px;
        height: 300px;
        border-radius: 40px;
        box-shadow: 5px 5px 30px 7px rgba(0,0,0,0.25), -5px -5px 30px 7px rgba(0,0,0,0.22);
        cursor: pointer;
        transition: 0.4s;
    }

        .card .card_image {
            width: inherit;
            height: inherit;
            border-radius: 40px;
        }

            .card .card_image img {
                width: inherit;
                height: inherit;
                border-radius: 40px;
                object-fit: cover;
            }

        .card .card_title {
            text-align: center;
            border-radius: 0px 0px 40px 40px;
            font-family: sans-serif;
            font-weight: bold;
            font-size: 30px;
            margin-top: -80px;
            height: 40px;
        }

        .card:hover {
            transform: scale(0.9, 0.9);
            box-shadow: 5px 5px 30px 15px rgba(0,0,0,0.25), -5px -5px 30px 15px rgba(0,0,0,0.22);
        }

    .title-white {
        color: white;
    }

    .title-black {
        color: black;
    }

    media all and (max-width: 500px) {
        .card-list

    {
        flex-direction: column;
    }

    }

    .btn-container {
        position: fixed;
        bottom: 20px; /* İstediğiniz dikey uzaklığı buradan ayarlayabilirsiniz */
        right: 20px; /* İstediğiniz yatay uzaklığı buradan ayarlayabilirsiniz */
    }

    p {
        color: deepskyblue;
        text-align: center;
        font-size: 18px; /* Örnek olarak 24px büyüklüğünde bir font boyutu belirtilmiş. İstediğiniz boyuta göre değiştirebilirsiniz. */
    }
</style>