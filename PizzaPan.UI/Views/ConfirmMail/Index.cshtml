@model ConfirmMailViewModel
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />


<div class="container">
    <br />
    <br />
    <form method="post">
        <h2>E-Mail Onay Sayfası</h2>
        <br />
        <label>Kullanıcı Adı</label>
        <input type="text" class="form-control" asp-for="Username" value="@ViewBag.username" readonly />
        <br />
        <label>Mail adresinize gelen 6 haneli kodu giriniz</label>
        <input type="text" class="form-control" asp-for="ConfirmCode" />
        <br />
        <button class="btn btn-primary">Hesabı Aktifleştir</button>
    </form>
</div>

